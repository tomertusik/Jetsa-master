<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Aqua"
        >

        <TextView
            android:id="@+id/title"
            android:text="@string/jesta"
            android:textColor="@color/Black"
            android:textSize="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <GridLayout
            android:id="@+id/types"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:columnCount="2"
            android:rowCount="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/rides"
                android:text="Rides"
                >
            </Button>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/home"
                android:text="Home"
                >
            </Button>

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/garden"
                android:text="Garden"
                >
            </Button>     <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/cleaning"
            android:text="Cleaning"
            >
        </Button>     <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/teachers"
            android:text="Teachers"
            >
        </Button>     <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/assigment"
            android:text="Assigment"
            >
        </Button>     <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/computer"
            android:text="Computer"
            >
        </Button>     <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/beauty"
            android:text="Beauty"
            >
        </Button>
        </GridLayout>

        <android.support.constraint.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/types"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="25dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@color/CadetBlue"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/myJestas"
                android:text="My Jestas"
                >
            </Button>

            <Button
                app:layout_constraintTop_toBottomOf="@id/myJestas"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@color/CadetBlue"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:id="@+id/myProfile"
                android:text="My Profile"
                >
            </Button>

        </android.support.constraint.ConstraintLayout>


        <FrameLayout
            android:id="@+id/mainFrame"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
    </android.support.constraint.ConstraintLayout>
</layout>